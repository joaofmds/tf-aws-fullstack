environment = "prod"
vpc_cidr    = "10.20.0.0/16"

public_subnets = {
  a = { cidr = "10.20.1.0/24", az = "us-east-1a" }
  b = { cidr = "10.20.2.0/24", az = "us-east-1b" }
}

private_app_subnets = {
  a = { cidr = "10.20.11.0/24", az = "us-east-1a" }
  b = { cidr = "10.20.12.0/24", az = "us-east-1b" }
}

private_db_subnets = {
  a = { cidr = "10.20.21.0/24", az = "us-east-1a" }
  b = { cidr = "10.20.22.0/24", az = "us-east-1b" }
